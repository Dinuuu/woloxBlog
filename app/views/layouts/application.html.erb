<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <div class="navbar navbar-default navbar-static-top" role="navegacion">
    <div class="container">
      <button class="navbar-toggle" data-toggle="collapse" data-target=".nav-top">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse nav-top">
        <ul class="nav navbar-nav navbar-left">
          <li> <%= link_to 'Home', root_path %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete %> </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Edit User", edit_user_registration_path %> </li>
                <li class="divider"></li>
                <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
          <% else %>
            <li><a href="#iniciar-sesion" data-toggle="modal" class="text-primary">Log in</a></li>
            <li> <%= link_to 'Log in Clasico', new_user_session_path %> </li>
            <li> <%= link_to 'Registration', new_user_registration_path %>  </li>
            <li> <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> </li>
            

          <% end %>
        </ul>
      </div>
    </div>
  </div>
  

   <div class="modal fade" id="iniciar-sesion" tabindex="-1" role="dialog" aria-labelledby="iniciar-sesion" >
      <div class="modal-dialog">
        <div class="modal-content">
          <form class="form-horizontal">
            <div class="modal-header"><h3>Iniciar sesión</h3></div>
            <div class="modal-body">
              <div class="container-fluid">
                <div class="form-group">
                  <input type="email" class="form-control" name="email" placeholder="Correo electrónico o nombre de usuario">
                </div>
                <div class="form-group">
                  <input type="password" name="password" class="form-control" placeholder="Contraseña">
                </div>
              </div>
              <p class="text-right"> <a href="#">¿Olvidaste tu contraseña?</a></p>
            </div>
            <div class="modal-footer">
              <a class="btn btn-default" data-dismiss="modal">Cancelar</a>
              <a class="btn btn-primary" name="commit" type="submit">Iniciar sesión</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <% if notice!= nil %>
      <% if !notice.empty?%>
      <div class="alert alert-info" role="alert">
        <p class="notice">
         <%= notice %>
        </p>
      </div>
      <% end %>
    <% end %>

    <% if alert != nil %>
      <% if !alert.empty? %>
       <div class="alert alert-danger" role="alert">
      <p class="alert">
        <%= alert %>
      </p>
      </div>
      <% end %>    
    <% end %>
    <%= yield %>
        
  <div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
  </div>
  </body>



</html>
